@model LandingPage.Models.LinksViewModels.LinksViewModels

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var title = Model.id > 0 ? "Editare" : "Creare";
}


<h2>@title</h2>

<h4>LinksViewModels</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id"/>
            <div class="form-group">
                <label asp-for="limbaj" class="control-label"></label>
                <input asp-for="limbaj" class="form-control" />
                <span asp-validation-for="limbaj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tags" class="control-label"></label>
                <input asp-for="tags" class="form-control" />
                <span asp-validation-for="tags" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="link" class="control-label"></label>
                <input asp-for="link" class="form-control" />
                <span asp-validation-for="link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@title" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
